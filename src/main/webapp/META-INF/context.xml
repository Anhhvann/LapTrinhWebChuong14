<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource name="jdbc/murach"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="${DB_URL}"
              username="${DB_USER}"
              password="${DB_PASS}"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="10000"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              validationQuery="SELECT 1"
              testOnBorrow="true"/>
</Context>
